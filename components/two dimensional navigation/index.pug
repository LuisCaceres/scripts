extends ../../pug/_layout



block css
    +css("css normalize")
    +css("dialog")



block content

    style= " *:focus { outline: 8px dashed black; } figure { display: inline-block; width: 10%; padding-bottom: 10%; background: lightblue;}"
    
    div(role="grid")
        div(role="row")
            figure(tabindex=0 role="gridcell" aria-labelledby='label')

            - for (let i = 0; i < 50; i++)
                figure(tabindex=-1  role="gridcell" aria-labelledby='label')


block js
    +script('polyfill')
    +script('class Iterator')
    +script('class Queue')
    +script('class Rectangle')
    +script('speech queue')
    +script('autofocus')
    +script('dialog')
    +script('two dimensional navigation')
    script(src="program.js")